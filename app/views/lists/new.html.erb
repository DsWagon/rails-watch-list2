<%# create a new list %>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new list</h3>
        <%= simple_form_for @list do |n| %>
          <%= n.input :name, placeholder: 'Comedy' %>
          <%= n.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
